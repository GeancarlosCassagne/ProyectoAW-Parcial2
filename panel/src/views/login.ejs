<% layout('layouts/main') -%>
<section class="contenedor wrapper">
    <div class="form-group" style="max-width: 600px; margin: 10px auto;">
        <br>
        <br>
    
        <form class="form" action="/api/panel/empleados/signin" method="POST">
            
            <h2 class="pp">Iniciar Sesión</h2>
            <hr>
            <input type="hidden" name="_id" value="">
            <div>
                <label for="email">Email</label>
                <input type="email" style="font-size: 1em;" class="form-control" id="email" name="email" value="" placeholder="Email" required>
            </div>
            <div>
                <label for="password">Contraseña</label>
                <input style="font-size: 1em;" type="password" class="form-control" id="password" name="password" value="" placeholder="Contraseña" required>
            </div>
            <div class="button">
            <button type="submit" style="font-size: 1em;" class="btn btn-primary button">Iniciar</button>
            </div>
            
            <p>¿No tienes una cuenta? <a href="/api/panel/registro">Registrate</a></p>
    
            <% if(signinMessage.length >0){ %>
                <div class="alert alert-danger"><%= signinMessage %></div>
    
            <% } %>
    
    
        </form>
        <br >
        <br>
        
    </div>
</section>
